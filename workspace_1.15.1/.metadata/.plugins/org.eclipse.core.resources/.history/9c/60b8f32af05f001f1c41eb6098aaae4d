/* Private variables ---------------------------------------------------------*/
TIM_HandleTypeDef htim3;
TIM_HandleTypeDef htim6;
TIM_HandleTypeDef htim7;

/* USER CODE BEGIN PV */
uint16_t red_pwm_value = 1000;   // Start with Red fully on
uint16_t blue_pwm_value = 0;     // Blue starts off
uint8_t transition_direction = 0; // 0 for Red to Blue, 1 for Blue to Red

const uint16_t TRANSITION_TIME_MS = 1000; // 1 second for full transition
const uint16_t TIMER_INTERVAL_MS = 10;    // Timer interrupt every 10 ms
const uint8_t TOTAL_STEPS = TRANSITION_TIME_MS / TIMER_INTERVAL_MS;
const float STEP_SIZE = 1000.0 / TOTAL_STEPS; // Adjust PWM value in steps
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_TIM6_Init(void);
static void MX_TIM7_Init(void);
static void MX_TIM3_Init(void);
/* USER CODE BEGIN PFP */

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef *htim)
{
	  if (htim->Instance == TIM3)
	    {
	        if (transition_direction == 0) // Transition from Red to Blue
	        {
	            if (red_pwm_value > 0)
	            {
	                red_pwm_value -= (uint16_t)STEP_SIZE;   // Decrease Red
	                blue_pwm_value += (uint16_t)STEP_SIZE;  // Increase Blue
	            }
	            else
	            {
	                transition_direction = 1;  // Switch direction to Blue to Red
	            }
	        }
	        else if (transition_direction == 1) // Transition from Blue to Red
	        {
	            if (blue_pwm_value > 0)
	            {
	                blue_pwm_value -= (uint16_t)STEP_SIZE;  // Decrease Blue
	                red_pwm_value += (uint16_t)STEP_SIZE;   // Increase Red
	            }
	            else
	            {
	                transition_direction = 0;  // Switch direction to Red to Blue
	            }
	        }

	        // Update PWM duty cycles
	        __HAL_TIM_SET_COMPARE(&htim3, TIM_CHANNEL_1, red_pwm_value);  // Update Red channel
	        __HAL_TIM_SET_COMPARE(&htim3, TIM_CHANNEL_3, blue_pwm_value); // Update Blue channel
	    }

	if (htim == &htim6)
		HAL_GPIO_TogglePin(YELLOW_LED_GPIO_Port, YELLOW_LED_Pin);

	if(htim == &htim7)
		HAL_GPIO_TogglePin(GREEN_LED_GPIO_Port, GREEN_LED_Pin);

}
/* USER CODE END 0 */

